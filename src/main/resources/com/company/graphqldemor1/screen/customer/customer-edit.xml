<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://customerEdit.caption"
        focusComponent="form">
    <data>
        <instance id="customerDc"
                  class="com.company.graphqldemor1.entity.Customer">
            <fetchPlan extends="_base">
                <property name="customerGuarantor" fetchPlan="_base"/>
                <property name="card" fetchPlan="_base"/>
            </fetchPlan>
            <loader/>
            <instance id="cardDc" property="card"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="editActions">
        <form id="form" dataContainer="customerDc">
            <column width="350px">
                <textField id="nameField" property="name"/>
                <comboBox id="statusField" property="status"/>
                <entityPicker id="customerGuarantorField" property="customerGuarantor">
                    <actions>
                        <action id="entityLookup" type="entity_lookup"/>
                        <action id="entityClear" type="entity_clear"/>
                    </actions>
                </entityPicker>
                <entityPicker id="cardField" property="card">
                    <actions>
                        <action id="entityOpenComposition" type="entity_openComposition"/>
                        <action id="entityClear" type="entity_clear"/>
                    </actions>
                </entityPicker>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
